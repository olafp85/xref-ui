<mvc:View
    controllerName="xref.controller.Details"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        title="{= ${xref>/type}.toLowerCase()} {xref>/name}"
        showNavButton="true"
        navButtonPress="onNavBack"
        enableScrolling="false"
        class="sapUiResponsiveContentPadding--header"
    >
        <VBox
            fitContainer="true"
            renderType="Bare"
        >
            <Panel
                headerText="Selection"
                class="sapUiResponsiveMargin sapUiForceWidthAuto"
                expandable="true"
                expanded="true"
            >
                <!-- Unit -->
                <Label text="Unit" />
                <ComboBox
                    items="{
                        path: 'xref>/units',
                        sorter: {
                            path: 'id'
                        }
				    }"
                    selectedKey="{view>/unit}"
                    change="onUnitChange"
                    showClearIcon="true"
                    width="50%"
                >
                    <core:Item
                        key="{xref>id}"
                        text="{
                            path: 'xref>id',
                            formatter: '.nodeName'
                        }"
                    />
                </ComboBox>

                <!-- Labels -->
                <CheckBox
                    text="Labels"
                    selected="{view>/labels}"
                    select="onLabelsSelect"
                />

                <!-- Spring layout -->
                <CheckBox
                    text="Spring"
                    selected="{view>/spring}"
                    select="onSpringSelect"
                />

                <!-- Edge length -->
                <Slider
                    value="{view>/edgeLength}"
                    enableTickmarks="true"
                    max="5"
                    width="50%"
                    liveChange="onEdgeLengthChange"
                />
            </Panel>

            <Panel
                class="sapUiResponsiveMargin sapUiForceWidthAuto"
                height="100%"
            >
                <!-- Graph in a <div id="cy"></div> -->
                <core:HTML
                    content="&lt;div id=&quot;cy&quot;&gt;&lt;/div&gt;"
                />
            </Panel>
        </VBox>
    </Page>
</mvc:View>
