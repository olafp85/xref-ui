<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <ViewSettingsDialog confirm="onSortConfirm">

        <sortItems>
            <ViewSettingsItem text="{i18n>type}"
                key="type" />
            <ViewSettingsItem text="{i18n>name}"
                key="name"
                selected="true"/>
            <ViewSettingsItem text="{i18n>system}"
                key="system" />
            <ViewSettingsItem text="{i18n>date}"
                key="date" />
        </sortItems>

    </ViewSettingsDialog>

</core:FragmentDefinition>